
@model tommysblog.ViewModels.BlogPostPageViewModel
@{
    ViewBag.Title = Model.PostViewModel.Title;
    tommysblog.Models.SocialItem socialItem = new tommysblog.Models.SocialItem { Url = Model.PostViewModel.ExternalUrl };
}

<div class="row recent-section">
    <div class="col-lg-8">
        <div class="recent-thought">
            <div class="row">
                <div class="col-sm-10 col-xs-9">
                    <h3>@Model.PostViewModel.Title</h3>
                    <div class="hidden-xs">
                        <span class="post-cat">
                            @foreach (var tag in Model.PostViewModel.Tags)
                            {
                                <div><i class="fa fa-tag"></i> <a href="@tag.Url" rel="tag">@tag.Name</a></div>
                            }
                        </span>
                    </div>
                </div>
                <div class="col-sm-2 col-xs-3 text-center">
                    <div class="date-block">
                        <span class="date-info" data-month="@Model.PostViewModel.LastEditMonth" data-year="@Model.PostViewModel.LastEditYear">@Model.PostViewModel.LastEditDay</span>
                    </div>
                </div>

            </div>
            <div class="hidden-sm hidden-md hidden-lg">
                <span class="post-cat">
                    @foreach (var tag in Model.PostViewModel.Tags)
                    {
                        <div><i class="fa fa-tag"></i> <a href="@tag.Url" rel="tag">@tag.Name</a></div>
                    }
                </span>
            </div>
            <div class="zoomy zoomy-in">
                <img src="~/Content/Images/Blog/@Model.PostViewModel.ImageName">
            </div>
            <div class="recent-preview">
                <p>@Html.Raw(Model.PostViewModel.Content)</p>
            </div>
            <div class="recent-footer clearfix">
                <div class="pull-right">
                    @Html.Partial("~/Views/Shared/_Share.cshtml", socialItem)
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div>
            @{ Html.RenderPartial("~/Views/Shared/_AuthorBlock.cshtml"); }
        </div>
        <div>
            @{ Html.RenderPartial("~/Views/Shared/_ArchiveBlock.cshtml", Model.ArchiveItems); }
        </div>
        <div>
            @{ Html.RenderPartial("~/Views/Shared/_TagListBlock.cshtml", Model.TagCounts); }
        </div>
    </div>
</div>
