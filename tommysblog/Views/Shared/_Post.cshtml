@model tommysblog.ViewModels.PostViewModel
@{
    tommysblog.Models.SocialItem socialItem = new tommysblog.Models.SocialItem { Url = Model.ExternalUrl };
}

<div class="recent-thought">
    <div class="row">
        <div class="col-sm-10 col-xs-9">
            <h3><a href="#">@Model.Title</a></h3>
            <div class="hidden-xs">
                <span class="post-cat">
                    @foreach (var tag in Model.Tags)
                    {
                        <div><i class="fa fa-tag"></i> <a href="@tag.Url" rel="tag">@tag.Name</a></div>
                    }
                </span>
            </div>
        </div>
        <div class="col-sm-2 col-xs-3 text-center">
            <div class="date-block">
                <span class="date-info" data-month="@Model.LastEditMonth" data-year="@Model.LastEditYear">@Model.LastEditDay</span>
            </div>
        </div>

    </div>
    <div class="hidden-sm hidden-md hidden-lg">
        <span class="post-cat">
            @foreach (var tag in Model.Tags)
            {
                <div><i class="fa fa-tag"></i> <a href="@tag.Url" rel="tag">@tag.Name</a></div>
            }
        </span>
    </div>
    <div class="zoomy zoomy-in">
        <img src="~/Content/Images/Blog/@Model.ImageName">
    </div>
    <div class="recent-preview">
        <p>@Model.Synopsis</p>
    </div>
    <div class="recent-footer clearfix">
        <div class="pull-left">
            @Html.Partial("~/Views/Shared/_Share.cshtml", socialItem)
        </div>
        <div class="pull-right">
            <a href="@Model.Url" class="btn btn-primary">Read more</a>
        </div>
    </div>
</div>